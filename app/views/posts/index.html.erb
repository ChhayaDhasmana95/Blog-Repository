<% @posts.each do |post| %>
<div class="post-div">
  <h1 class="post-title"> <%= post.title %> </h1>
  <div class="glyphicon glyphicon-calendar" id="post-date">
    <%= post.created_at.strftime("%b %d, %Y") %>
  </div>
  <div class="post-content">
    <%= post.content %>
  </div>
