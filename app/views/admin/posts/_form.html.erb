
<div class="row">
  <div class="col-md-12">
    <%= form_for [:admin, @post]  do |f| %>
      <% if @post.errors.any? %>
        <div class="panel panel-danger col-md-offset-1">
          <div class="panel-heading">
            <h2 class="panel-title">
              <%= pluralize(@post.errors.count, "error") %>
              prohibited this post from being saved: </h2>
            <div class="panel-body">
              <ul>
                <% @post.errors.full_messages.each do |msg| %>
                  <li>
                    <%= msg %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
        <div class='form-group'>
          <div class='control-label col-md-1'>
            <%= f.label :title %>
          </div>
          <div class='col-md-11'>
            <%= f.text_field :title, class: 'form-control', placeholder: 'Title of post', autofocus: true %>
          </div>
        </div>
        <div class='form-group'>
          <div class='control-label col-md-1'>
            <%= f.label :content %>
          </div>
          <div class='col-md-11'>
            <%= f.text_area :content, rows: 10, class: 'form-control', placeholder: 'Content of post' %>
          </div>
        </div>
        <div class='form-group'>
          <div class='col-md-offset-1 col-md-11'>
            <%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
