<%= form_for([post, post.comments.build], class: "form-inline")  do |f| %>
    <div class="form-group">
    	<%= f.text_field :text, placeholder: "Your Comments", class: "form-group" %>
    </div>
    <div class="form-group">
    	<%= f.submit  '<button class="btn btn-default">Add</button>'.html_safe, class: "button is-primary" %>

        
    </div>
<% end %>